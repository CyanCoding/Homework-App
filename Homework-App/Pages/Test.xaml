<Window x:Class="Homework_App.Pages.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Homework_App.Pages"
        mc:Ignorable="d"
        Title="Test" Height="600" Width="1000">
    <Grid>
        <Border HorizontalAlignment="Left" VerticalAlignment="Stretch" Background="Black" Width="55"/>
        <Border x:Name="menuBorder" Opacity="0" Margin="10,10,0,0" Width="35" Height="35" HorizontalAlignment="Left" Background="#252525" VerticalAlignment="Top" CornerRadius="5" MouseEnter="BorderMouseEnter" MouseLeave="BorderMouseLeave">
            <Border x:Name="colorBorder" Width="0" Height="0" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Red" BorderThickness="2" CornerRadius="5" Opacity="0.45"/>
        </Border>
        <Label x:Name="menuButton" FontFamily="Segoe MDL2 Assets" Margin="13,12,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="&#xE700;" FontSize="18"  Foreground="White" MouseEnter="BorderMouseEnter" MouseLeave="BorderMouseLeave"/>
    </Grid>
</Window>
